<div class="new-body2">
    {{#is "home"}}
        <div class="flex-element new-list">
            <div class="new-cover">
                {{#get "pages" limit="1" filter="tag:[hash-cover]" include="content"}}
                    {{#foreach pages}}
                        {{content}}
                    {{/foreach}}
                {{/get}}
                <form class="signup-form" data-members-form="subscribe">
                    <input class="signup-email" type="email" name="email" placeholder="Your email address" required />
                    <button class="signup-button" type="submit">
                        <span>Get Updates</span> &#8594;
                    </button>
                </form>
                <div data-members-success class="signup-success-message">
                    Thanks, check your inbox!
                </div>
                <div data-members-error class="signup-error-message">
                    Something went wrong. Please try again.
                </div>
            </div>
            <div class="posts-loop-div">
                <strong>â­‘ Popular</strong><br>
                {{#get "posts" limit="all" filter="featured:true"}}
                    <ul class="post-loop-ul">
                        {{#foreach posts}}
                            {{> "loop2"}}
                        {{/foreach}}
                    </ul>
                {{/get}}
            </div>

            <div class="posts-loop-div">
                <strong>All</strong><br>
                 <ul class="post-loop-ul">
                {{#foreach posts}}
                    {{> "loop2"}}
                {{/foreach}}
                 </ul>
            </div>

        </div>
    {{/is}}

    {{#is "post"}}
        <div class="flex-element new-list">
            {{#post}}
                {{> content}}
            {{/post}}
        </div>
    {{/is}}
    {{#is "tag"}}
        <div class="flex-element new-list">
            {{#tag}}
                {{> content-tag}}
            {{/tag}}
        </div>
    {{/is}}

    {{#is "page"}}
        <div class="flex-element new-list">
            {{#page}}
                {{> content-page}}
            {{/page}}
        </div>
    {{/is}}
</div>